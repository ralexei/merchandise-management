<Window x:Class="MerchandiseManager.Register.WPF.Dialogs.SubmitCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerchandiseManager.Register.WPF.Dialogs"
        mc:Ignorable="d"
        Title="Подтверждение" Height="280" Width="250"
		ResizeMode="NoResize"
		ShowInTaskbar="False"
		ShowActivated="True"
		Topmost="True"
		WindowStartupLocation="CenterOwner">
	<StackPanel Margin="16px" HorizontalAlignment="Center">
		<Label Content="К оплате:"/>
		<TextBox HorizontalAlignment="Center" x:Name="TotalToPay" Height="23" TextWrapping="Wrap" Width="200" IsEnabled="False"/>
		<Label Content="Полученная сумма:"/>
		<TextBox HorizontalAlignment="Center" x:Name="ReceivedSum" Height="23" TextWrapping="Wrap" Width="200" TextChanged="TextBox_TextChanged"/>
		<Label Content="Сдача:"/>
		<TextBox HorizontalAlignment="Center" x:Name="Change" Height="23" TextWrapping="Wrap" Width="200" IsEnabled="False"/>
		<Button Content="Подтвердить" Margin="0, 32, 0, 0" Height="30" Click="Button_Click"/>
	</StackPanel>
</Window>
